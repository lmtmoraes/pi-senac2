<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="16dp">

    <!-- Texto: Instruções para meta em ml -->
    <TextView
        android:id="@+id/tv_meta_ml"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Considerando a medida mililitros (ml), digite no campo abaixo a meta de quantidade de água ingerida em número:"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp" />

    <!-- EditText: Meta em ml -->
    <EditText
        android:id="@+id/et_meta_ml"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Ex: 2000"
        android:inputType="number"
        android:padding="12dp"
        android:backgroundTint="@android:color/darker_gray"
        app:layout_constraintTop_toBottomOf="@id/tv_meta_ml"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <!-- Botão: Confirmar meta em ml -->
    <Button
        android:id="@+id/btn_confirmar_meta_ml"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Confirmar"
        android:backgroundTint="#82BFF6"
        android:textColor="@android:color/black"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/et_meta_ml"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tv_ou"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ou"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/btn_confirmar_meta_ml"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="48dp" />

    <TextView
        android:id="@+id/tv_meta_peso"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Considerando a quantidade de massa em quilogramas (kg), digite seu peso no campo abaixo para que a quantidade de água recomendada seja calculada e adicionada como sua meta diária:"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/tv_ou"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="48dp" />

    <EditText
        android:id="@+id/et_peso"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Ex: 60"
        android:inputType="number"
        android:padding="12dp"
        android:backgroundTint="@android:color/darker_gray"
        app:layout_constraintTop_toBottomOf="@id/tv_meta_peso"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <Button
        android:id="@+id/btn_confirmar_meta_peso"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Confirmar"
        android:backgroundTint="#82BFF6"
        android:textColor="@android:color/black"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/et_peso"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
