<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <!-- TextView: Período (ex: "Manhã") -->
    <TextView
        android:id="@+id/tv_periodo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Manhã"
        android:textSize="18sp"
        android:textColor="@android:color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- TextView: Horário -->
    <TextView
        android:id="@+id/tv_horario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="07:00 AM"
        android:textSize="14sp"
        android:textColor="@android:color/black"
        app:layout_constraintTop_toBottomOf="@id/tv_periodo"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="4dp" />

    <!-- Clickable TextView: Excluir -->
    <TextView
        android:id="@+id/tv_excluir"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Excluir"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="14sp"
        android:clickable="true"
        android:padding="10dp"
        android:focusable="true"
        app:layout_constraintTop_toBottomOf="@id/tv_periodo"
        app:layout_constraintStart_toEndOf="@id/tv_horario"
        app:layout_constraintBottom_toBottomOf="@id/tv_horario"
        android:layout_marginStart="38dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
