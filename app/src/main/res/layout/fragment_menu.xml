<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <!-- Imagem -->
    <ImageView
        android:id="@+id/ic_splash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_splash"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp" />

    <!-- Texto -->
    <TextView
        android:id="@+id/tv_waterfit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/waterfit"
        android:textSize="48dp"
        android:textColor="@android:color/black"
        app:layout_constraintTop_toBottomOf="@id/ic_splash"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <!-- Botão: Consultar registros salvos -->
    <Button
        android:id="@+id/btn_consultar_registros"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Consultar registros salvos"
        android:backgroundTint="#82BFF6"
        android:textColor="@android:color/black"
        android:layout_marginTop="32dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        app:layout_constraintTop_toBottomOf="@id/tv_waterfit"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Botão: Registros do dia -->
    <Button
        android:id="@+id/btn_registros_dia"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Registros do dia"
        android:backgroundTint="#82BFF6"
        android:textColor="@android:color/black"
        android:layout_marginTop="16dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        app:layout_constraintTop_toBottomOf="@id/btn_consultar_registros"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Botão: Atualizar frequência dos lembretes -->
    <Button
        android:id="@+id/btn_atualizar_lembretes"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Atualizar frequência dos lembretes"
        android:backgroundTint="#82BFF6"
        android:textColor="@android:color/black"
        android:layout_marginTop="16dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        app:layout_constraintTop_toBottomOf="@id/btn_registros_dia"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
