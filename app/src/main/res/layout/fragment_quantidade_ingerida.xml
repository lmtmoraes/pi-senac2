<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="16dp">

    <!-- Texto: Instruções para meta em ml -->
    <TextView
        android:id="@+id/tv_meta_ml"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Considerando a medida mililitros (ml), digite no campo abaixo a quantidade de água ingerida:"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp" />

    <!-- EditText: Meta em ml -->
    <EditText
        android:id="@+id/et_meta_ml"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Ex: 200"
        android:inputType="number"
        android:padding="12dp"
        android:backgroundTint="@android:color/darker_gray"
        app:layout_constraintTop_toBottomOf="@id/tv_meta_ml"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <!-- Botão: Confirmar meta em ml -->
    <Button
        android:id="@+id/btn_confirmar_meta_ml"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Confirmar"
        android:backgroundTint="#82BFF6"
        android:textColor="@android:color/black"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/et_meta_ml"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
